<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application
            icon="icons/explorer.png">
         <run
               class="uk.ac.diamond.scisoft.icatexplorer.v4.rcp.internal.Application">
         </run>
      </application>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="uk.ac.diamond.scisoft.icatexplorer.v4.rcp.internal.Application"
            name="ICAT Explorer">
         <property
               name="ICAT Explorer V4"
               value="ICAT Explorer V4">
         </property>
         <property
               name="windowImages"
               value="icons/explorer.png">
         </property>
      </product>
   </extension>
   
   <extension
         point="org.eclipse.ui.views">
       <category
            name="ICAT V4"
            id="uk.ac.diamond.scisoft.icatexplorer.v4.rcp">
      </category>
       <view
             allowMultiple="false"
             category="uk.ac.diamond.scisoft.icatexplorer.v4.rcp"
             class="org.eclipse.ui.navigator.CommonNavigator"
             icon="icons/filenav_nav.gif"
             id="uk.ac.diamond.scisoft.icatexplorer.v4.view"
             name="ICAT v4 View">
       </view>
      
   </extension>
   
