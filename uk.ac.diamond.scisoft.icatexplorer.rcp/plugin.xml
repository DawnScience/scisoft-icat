   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="uk.ac.diamond.scisoft.icatexplorer.rcp.elementSelected">
         <with
               variable="selection">
            <iterate
                  ifEmpty="false"
                  operator="or">
               <instanceof
                     value="uk.ac.diamond.scisoft.icatexplorer.rcp.data.DDataset">
               </instanceof>
            </iterate>
         </with>
      </definition>
      <definition
            id="uk.ac.diamond.scisoft.icatexplorer.rcp.datasetSelected">
         <with
               variable="uk.ac.diamond.scisoft.icatexplorer.rcp.with1">
            <iterate>
               <instanceof
                     value="uk.ac.diamond.scisoft.icatexplorer.rcp.data.DDataset">
               </instanceof>
            </iterate>
         </with>
      </definition>
      <definition
            id="uk.ac.diamond.scisoft.icatexplorer.rcp.investigationSelected">
         <with
               variable="uk.ac.diamond.scisoft.icatexplorer.rcp.with2">
            <iterate>
               <instanceof
                     value="uk.ac.diamond.scisoft.icatexplorer.rcp.data.DInvestigation">
               </instanceof>
            </iterate>
         </with>
      </definition>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="uk.ac.diamond.scisoft.icatexplorer.rcp.editors.DDatasetEditor"
            default="false"
            icon="icons/prop_ps.gif"
            id="uk.ac.diamond.scisoft.icatexplorer.rcp.editors.dataseteditor"
            name="Dataset Editor"
            allowMultiple="true">
      </editor>
      <editor
            class="uk.ac.diamond.scisoft.icatexplorer.rcp.editors.DatafileEditor"
            icon="icons/prop_ps.gif"
            id="uk.ac.diamond.scisoft.icatexplorer.rcp.editors.DatafileEditor"
            name="Datafile Editor"
            allowMultiple="true">
      </editor>
      <editor
            class="uk.ac.diamond.scisoft.icatexplorer.rcp.editors.DInvestigationEditor"
            default="false"
            icon="icons/prop_ps.gif"
            id="uk.ac.diamond.scisoft.icatexplorer.rcp.editors.investigationeditor"
            name="Investigation Editor"
            allowMultiple="true">
      </editor>
   </extension>
   <extension
         point="uk.ac.diamond.scisoft.introRegister">
      <introPageRegister
            class="uk.ac.diamond.scisoft.icatexplorer.rcp.launcher.ICATPerspectiveLauncher"
            description="This perspective allows exploring and opening data from the Diamond archiving system"
            icon="icons/icat-logo-128x128.gif"
            id="uk.ac.diamond.scisoft.icatexplorer.rcp.introPageRegister"
            name="(Pre-release) ICAT Explorer">
      </introPageRegister>
   </extension>
